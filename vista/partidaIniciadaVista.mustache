<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link rel="stylesheet" href="../public/styles/partidaStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
<div class="partidaContainer container-fluid  mt-5">
    <a href="/home/mostrarHome">
        <button type="button" class="btn btn-outline-secondary fs-5">Salir de la partida</button>
    </a>
</div>

    <div class="container text-center mt-5 border">
        <h1 class="mb-5">¡Girá la ruleta para elegir una categoría!</h1>

        <!-- Ruleta interactiva -->
        <div class="ruleta-container mt-4">
            <div id="ruleta" class="ruleta">
                <div class="sector" style="background-color: yellow;">Historia</div>
                <div class="sector" style="background-color: green;">Ciencia</div>
                <div class="sector" style="background-color: blue;">Deporte</div>
                <div class="sector" style="background-color: orange;">Arte</div>
                <div class="sector" style="background-color: red;">Entretenimiento</div>
                <div class="sector" style="background-color: purple;">Geografía</div>
            </div>
            <button type="button" id="girarRuleta" class="girarRuletaBtn btn btn-primary btn-lg fs-2 fw-semibold mt-3">GIRAR</button>
        </div>

        <!-- Categorías -->
        <div class="categorias mt-4">
            <p><strong>Categorías:</strong> Historia, Ciencia, Deporte, Arte, Entretenimiento, Geografía</p>
        </div>

    </div>

<!-- Script para la animación de la ruleta -->
<script>
    document.getElementById('girarRuleta').addEventListener('click', function() {
        // Genera un valor aleatorio para la rotación de la ruleta entre 3600 y 3960 grados
        const randomDegree = Math.floor(Math.random() * 360) + 3600;

        // Usando template literals para asignar el valor correctamente
        const ruleta = document.getElementById('ruleta');
        ruleta.style.transform = `rotate(${randomDegree}deg)`;  // Utilizamos las comillas invertidas
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

</body>
</html>



