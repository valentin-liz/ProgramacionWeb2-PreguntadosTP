<div class="w3-container w3-center w3-margin">
    <form method="POST" action="/login/login" class="w3-card w3-padding w3-light-grey w3-display-inline-block" style="min-width:300px">
        {{#error}}
            <div class='w3-panel w3-red'>{{error}}</div>
        {{/error}}
        <p><input class="w3-input w3-border" type="text" name="usuario" placeholder="Usuario"></p>
        <p><input class="w3-input w3-border" type="password" name="password" placeholder="Password"></p>
        <p><input class="w3-button w3-blue" type="submit" value="Ingresar"></p>
    </form>
</div>