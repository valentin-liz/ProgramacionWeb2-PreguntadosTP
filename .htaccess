Options -Indexes

<FilesMatch ".*\.(log|ini|htaccess)$">
    deny from all
</FilesMatch>

# ================================
# ğŸ” Rutas amigables
# ================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # No reescribir recursos estÃ¡ticos
    RewriteRule ^(imagenes|public)($|/) - [L,NC]

    # Si el archivo/carpeta existe, no reescribas
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # /controlador/metodo/param -> index.php?controller=$1&method=$2&param=$3
    RewriteRule ^([A-Za-z0-9_-]+)/([A-Za-z0-9_-]+)/([A-Za-z0-9_-]+)$ index.php?controller=$1&method=$2&param=$3 [L,QSA]

    # /controlador/metodo -> index.php?controller=$1&method=$2
    RewriteRule ^([A-Za-z0-9_-]+)/([A-Za-z0-9_-]+)$ index.php?controller=$1&method=$2 [L,QSA]

    # /controlador -> index.php?controller=$1
    RewriteRule ^([A-Za-z0-9_-]+)$ index.php?controller=$1 [L,QSA]
</IfModule>

# (Opcional) Forzar UTF-8
AddDefaultCharset UTF-8
