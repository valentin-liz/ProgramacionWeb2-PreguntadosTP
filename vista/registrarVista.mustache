<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Registrarse</title>
    <link rel="stylesheet" href="../public/styles/registrarStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>

<h1 class="fw-bold text-center mt-5 mb-4">Registrarse</h1>

{{#errorFaltanDatos}}
    <div class="alert alert-warning" role="alert">{{errorFaltanDatos}}</div>
{{/errorFaltanDatos}}

{{#errorUsuarioYaExiste}}
    <div class="alert alert-danger" role="alert">{{errorUsuarioYaExiste}}</div>
{{/errorUsuarioYaExiste}}

{{#errorAlRegistrar}}
    <div class="alert alert-danger" role="alert">{{errorAlRegistrar}}</div>
{{/errorAlRegistrar}}

{{#exito}}
    <div class="alert alert-success" role="alert">{{exito}}</div>
{{/exito}}

<div class="containerForm">

    <form method="post" enctype="multipart/form-data">
        <label class="form-label">Nombre</label>
        <input class="form-control" type="text" name="nombre" placeholder="Nombre" required>

        <label class="form-label">Apellido</label>
        <input class="form-control" type="text" name="apellido" placeholder="Apellido" required>

        <label class="form-label">Año de nacimiento</label>
        <input class="form-control" type="number" name="anio_nacimiento" min="1900" max="2025" placeholder="Año de nacimiento" required>

        <label class="form-label">Sexo</label>
        <div class="radio-group">
            <label><input class="form-check-input" type="radio" name="sexo" value="Masculino" checked> Masculino</label>
            <label><input class="form-check-input" type="radio" name="sexo" value="Femenino"> Femenino</label>
            <label><input class="form-check-input" type="radio" name="sexo" value="Prefiero no cargarlo"> Prefiero no cargarlo</label>
        </div>

        <label class="form-label">País y ciudad</label>
        <input class="form-control" type="text" name="pais_ciudad">

        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" required>

        <label class="form-label">Nombre de usuario</label>
        <input class="form-control" type="text" name="usuario" required>

        <label class="form-label">Contraseña</label>
        <input class="form-control" type="password" name="contrasenia" required>

        <label class="form-label">Foto de perfil</label>
        <input class="form-control" type="file" name="foto_perfil" accept="image/*">

        <button class="btn btn-primary mt-4 mb-4" type="submit">Registrarse</button>

        <div class="text-center">
            <a class="link" href="/login/login">¿Ya tenés cuenta? Inicia sesión</a>
        </div>

    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
