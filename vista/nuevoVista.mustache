<div class="w3-container w3-center w3-margin">
    <form method="POST" action="/pokemon/nuevo"  enctype="multipart/form-data" class="w3-card w3-white w3-padding w3-content" style="max-width:700px;text-align:left">
        <p><label>Número</label><input class="w3-input w3-border" type="number" name="numero" required></p>
        <p><label>Nombre</label><input class="w3-input w3-border" type="text" name="nombre" required></p>
        <p><label>Tipo</label>
            <select class="w3-select w3-border" name="tipo">
                <option value="fuego">fuego</option>
                <option value="agua">agua</option>
                <option value="planta">planta</option>
                <option value="electrico">electrico</option>
            </select>
        </p>
        <p><label>Descripción</label><textarea class="w3-input w3-border" name="descripcion"></textarea></p>
        <p><label>Imagen</label><input class="w3-input w3-border" type="file" name="imagen"></p>
        <p><button class="w3-button w3-green" type="submit">Guardar</button>
            <a class="w3-button w3-blue" href="/">Volver</a></p>
    </form>
</div>